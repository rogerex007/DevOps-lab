pipeline{
    agent any
    
    tools {nodejs "node"}

    environment {
        // Search Repo name from the URL
        REPO_NAME = "DevOps-lab"
        DEPLOY_FOLDER = '/home/rmesa/deployedApps'
    }
    
    stages{

        stage('Install'){
            steps{
                sh 'npm install'
            }
        }


        stage('Test'){
            steps{
                sh 'npm test'
            }
        }

        stage('Start'){
            steps{
                sh(returnStdout: true, script: '''#!/bin/bash
                    if [-d ps aux | grep -q node]; then
                        kill -9 $(ps aux | grep node | awk '{print $1}')
                        npm run start &
                    else
                        npm run start &
                    fi
                '''.stripIndent())
            }
        }


        
    }
}