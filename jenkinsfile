node(){
    tools {nodejs "node"}
    
    stages{
        stage('Test'){
            steps{
                sh 'npm test'
            }
        }
        
        stage('Build'){
            steps{
                sh 'npm install'
            }
        }

        stage('Deploy'){
            steps{
                // Copy the built files to the deploy folder

                sh 'mkdir -p deploy'
                sh 'cp -r /* deploy'
            }
        }
        
    }
}