pipeline{
    agent any
    
    tools {nodejs "node"}

    environment {
        // Search Repo name from the URL
        REPO_NAME = "DevOps-lab"
        DEPLOY_FOLDER = '/home/rmesa/deployedApps'
    }
    
    stages{

        stage('Install'){
            steps{
                sh 'npm install'
            }
        }


        stage('Test'){
            steps{
                sh 'npm test'
            }
        }

        stage('Build Artifact'){
            steps{
                sh 'zip Artifact.zip ${WORKSPACE}/*'
            }
        }


        stage('Deploy'){
            steps{
                sh 'unzip ${WORKSPACE}/Artifact.zip -d ${DEPLOY_FOLDER}'
                sh 'cd ${DEPLOY_FOLDER}'
                sh 'npm run start'
            }
        }

        stage('Cleanup'){
            steps{
                sh 'rm ${WORKSPACE}/Artifact.zip'
            }
        }


        
    }
}