pipeline{
    agent any
    
    tools {nodejs "node"}

    environment {
        // Search Repo name from the URL
        REPO_NAME = "DevOps-lab"
        DEPLOY_FOLDER = '/home/rmesa/deployedApps'
    }
    
    stages{

        stage('Install'){
            steps{
                sh 'npm install'
            }
        }


        stage('Test'){
            steps{
                sh 'npm test'
            }
        }

        stage('Start'){
            steps{
                sh(returnStdout: true, script: '''#!/bin/bash
                    if pgrep "node" ; then
                        echo "Node is already running"
                        kill -9 $(pgrep -f node)
                    else
                        echo "Node is not running"
                    fi
                    npm run start &
                '''.stripIndent())
            }
        }


        
    }
}