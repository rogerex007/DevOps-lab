pipeline{
    agent any
    
    tools {nodejs "node"}

    environment {
        // Search Repo name from the URL
        REPO_NAME = "DevOps-lab"
        DEPLOY_FOLDER = '/home/rmesa/deployedApps'
    }
    
    stages{

        stage('Install'){
            steps{
                sh 'npm install'
            }
        }


        stage('Test'){
            steps{
                sh 'npm test'
            }
        }

        stage('Start'){
            steps{
                sh(returnStdout: true, script: '''#!/bin/bash
                    if pm2 list | grep -q index; then
                        pm2 restart index
                    else
                        pm2 start src/index.js 
                    fi
                '''.stripIndent())
            }
        }


        
    }
}