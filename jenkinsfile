pipeline{
    agent any
    
    tools {nodejs "node"}

    environment {
        // Search Repo name from the URL
        REPO_NAME = "DevOps-lab"
        DEPLOY_FOLDER = '/home/rmesa/deployedApps'
    }
    
    stages{

        stage('Install'){
            steps{
                sh 'npm install'
            }
        }


        stage('Test'){
            steps{
                sh 'npm test'
            }
        }

        stage('Start'){
            steps{
                if('sh ps aux | grep node' == '1'){
                    sh 'kill -9 $(pgrep -f node)'
                    sh 'npm run start &'
                }
                sh 'npm run start &'
            }
        }


        
    }
}